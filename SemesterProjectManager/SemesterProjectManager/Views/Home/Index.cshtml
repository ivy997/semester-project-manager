@using Microsoft.AspNetCore.Identity
@using SemesterProjectManager.Data.Models
@{
    ViewData["Title"] = "Home Page";
}
@inject SignInManager<ApplicationUser> SignInManager

<!--====== SEARCH BOX PART START ======-->

    <div class="search-box">
        <div class="serach-form">
            <div class="closebtn">
                <span></span>
                <span></span>
            </div>
            <form action="#">
                <input type="text" placeholder="Search by keyword">
                <button><i class="fa fa-search"></i></button>
            </form>
        </div> <!-- search form -->
    </div>

    <!--====== SEARCH BOX PART ENDS ======-->
    <!--====== SLIDER PART START ======-->

    <section id="slider-part" class="slider-active">
        <div class="single-slider bg_cover pt-150" style="background-image: url(images/slider/s-1.jpg)" data-overlay="4">
            <div class="container">
                <div class="row">
                    <div class="col-xl-7 col-lg-9">
                        <div class="slider-cont">
                            <h1 data-animation="bounceInLeft" data-delay="1s">Semester Project Manager</h1>
                            <p data-animation="fadeInUp" data-delay="1.3s">Project submission has never been easier.</p>
                            <ul>
                                <li><a asp-action="SendEmail" data-animation="fadeInUp" data-delay="1.6s" class="main-btn">Contact us</a></li>
                                @if (!SignInManager.IsSignedIn(this.User))
                                {
                                    <li><a asp-area="Identity" asp-page="/Account/Login" data-animation="fadeInUp" data-delay="1.9s" class="main-btn main-btn-2">Get Started</a></li>
                                }
                            </ul>
                        </div>
                    </div>
                </div> <!-- row -->
            </div> <!-- container -->
        </div> <!-- single slider -->

