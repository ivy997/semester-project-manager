@model SemesterProjectManager.Web.ViewModels.EditTopicViewModel
@{
    ViewData["Title"] = "Edit";
}

<div class="container">
    <h1>Edit</h1>
    <h4>Topic</h4>
    <hr />

    <form asp-action="Edit">
        @Html.HiddenFor(m => m.SubjectId)
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row">
            <div class="col-md-4">
                <div class="form-group">
                    @*<label asp-for="Title" class="control-label"></label>*@
                    <input asp-for="Title" class="form-control" placeholder="Title" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-4">
                <div class="form-group">
                    @*<label asp-for="Description" class="control-label"></label>*@
                    <input asp-for="Description" class="form-control" placeholder="Description" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-4">
                <div class="form-group">
                    @*<label asp-for="StateOfApproval"></label>*@
                    <select class="form-control" asp-for="StateOfApproval"
                            asp-items="@Html.GetEnumSelectList(typeof(SemesterProjectManager.Data.Models.Enums.StateOfApproval))">
                        <option>
                            Select
                        </option>
                    </select>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-4 pt-20 pb-10">
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <input type="submit" value="Save" class="main-btn hover-success" />
                </div>
            </div>
        </div>
    </form>


    <div>
        <a asp-controller="Subjects" asp-action="Details" asp-route-id="@Model.SubjectId">Back to List</a>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
