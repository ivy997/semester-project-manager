@model SemesterProjectManager.Web.ViewModels.EditTopicViewModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Topic</h4>
    <hr />
    @Html.HiddenFor(m => m.SubjectId)
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        @if (this.User.IsInRole("Student"))
        {
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.StateOfApproval)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.StateOfApproval)
            </dd>
        }
    </dl>
</div>
<div>
    <hr />
    <div class="row mb-3">
        @if (this.User.IsInRole("Student") && Model.Tasks.All(x => x.IsApproved == false))
        {
            <div class="col-md-2">
                <a class="btn btn-primary" asp-controller="Tasks" asp-action="Create" asp-route-id="@Model.Id" asp-route-subjectId="@Model.SubjectId">Create task</a>
            </div>
        }
        @if (this.User.IsInRole("Student") && Model.Tasks.Any(x => x.IsApproved == true))
        {
            <div class="col-md-6">
                <form method="post" enctype="multipart/form-data" asp-controller="Projects" asp-action="Upload" asp-route-id="@Model.Id">
                    @Html.HiddenFor(m => m.Project.TopicId)
                    <div class="form-group">
                        <div class="col-md-10">
                            <p>Upload project file</p>
                            <input class="form-control" name="files" type="file" />
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-10">
                            <input class="btn btn-primary" type="submit" value="Upload" />
                        </div>
                    </div>
                </form>
            </div>
        }
    </div>
    @if (TempData["Success"] != null)
    {
        <div class="row">
            <div class="col-md-6">

                <div class="alert alert-success" role="alert">
                    @TempData["Success"]
                </div>

            </div>
        </div>
    }
    @if (this.User.IsInRole("Teacher"))
    {
        <h4>@Html.DisplayNameFor(model => model.Tasks)</h4>
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Student</th>
                    <th scope="col">Faculty number</th>
                    <th scope="col">Created on</th>
                    <th scope="col">State</th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Tasks != null)
                {
                    foreach (var item in Model.Tasks)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.StudentFullName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.FacultyNumber)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CreatedOn)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.IsApproved)
                            </td>
                            <td>
                                <a asp-controller="Tasks" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                                <a asp-controller="Tasks" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                                @*<a asp-controller="Tasks" asp-action="Details" asp-route-id="@item.Id">Details</a>*@
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    }
    <div class="row mb-3">
        <div class="col">
            <a asp-controller="Subjects" asp-action="Details" asp-route-id="@Model.SubjectId">
                Back to List
            </a>
        </div>
    </div>
</div>
