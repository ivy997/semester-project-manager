<div class="gray-bg">
    <div class="container">

        <section>
            <div class="row">
                <div class="col pt-20 pb-20">
                    <h2>@Html.DisplayNameFor(model => model.Topics)</h2>
                    @if (User.IsInRole("Teacher"))
                    {
                        <div class=" pt-10 pb-10">
                            <a class="main-btn" asp-route-subjectId="@Model.Id" asp-controller="Topics" asp-action="Create">Create</a>
                        </div>
                    }
                </div>
            </div>
        </section>

        <section id="teachers-page">
                <div class="row">
                    <div class="col-lg-3 col-md-6 col-sm-8">
                        @if (Model.Topics != null)
                        {
                            @foreach (var item in @Model.Topics)
                            {
                                 <div class="singel-teachers mt-30 text-center">
                                     <div class="image">
                                         <img src="../../images/teachers/t-1.jpg" alt="Teachers">
                                     </div>
                                     <div class="cont">
                                         <a class="text-center" asp-controller="Topics" asp-action="Details" asp-route-id="@item.Id">
                                             <h6>@Html.DisplayFor(modelItem => item.Name)</h6>
                                         </a>
                                     </div>
                                 </div>
                                 @if (User.IsInRole("Teacher"))
                                  {
                                      <div class="singel-publication">
                                          <div class="cont">
                                              <div class="button text-left" >
                                                  <a class="main-btn hover-success" style="width: 69px" asp-controller="Topics" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                                              </div>
                                              <div class="button text-right">
                                                  <a class="main-btn hover-danger" style="width: 69px;" asp-controller="Topics" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                                              </div>
                                          </div>
                                      </div>
                                  }
                            }
                        }
                    </div>
                </div> <!-- row -->
                @*</div>*@  <!-- row -->
        </section>

        <div>
            @*@if (User.IsInRole("Teacher"))
                {
                    <a class="btn btn-info" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@Model.Id">Delete</a>
                }*@
            <a class="pt-10" asp-action="All">Back to List</a>
        </div>
    </div>
</div>
